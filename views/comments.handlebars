<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills float-right">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home<span class="sr-only">(homepage)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="http://www.latimes.com/" target="_blank">Los Angeles Times</a> 
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=" https://acecera.github.io/mongoDB/" target="_blank">Github</a>
                </li>
            </ul>
        </nav>
        <h3 class="text-muted">Mongo Web Scraper</h3>
    </div>

    <div class="row">
        <h1><a href="{{result.link}}" target="_blank">{{result.title}}</a></h1>
        <p>{{result.articleSummary}}</p>
    </div>
    <div class="row">
        <h2>Comments</h2>
    </div>

    <div class="row">
        {{#unless result.comment}}
        <p>There are no comments just yet.</p>
        {{/unless}}
    </div>

    <div class="row">
        <ul>
            {{#each result.comment}}
            <li style="list-style: none">
                <h5>Name: {{this.name}}</h5>
                <p>Message: {{this.body}}</p>
                <button class="delete-button btn btn-secondary" data-comment="{{this._id}}">Delete Comment</button>
            </li>
            {{/each}}
        </ul>
    </div>
    
    <div class="row">
        <h2>Comment on this Article</h2>
    </div>
    <form method="POST" action="/articles/{{result._id}}">
        <div class="form-group row">
            <label for="name" class="col-form-label">Name</label>
            <input class="form-control" type="text" name="name" id="name" required>
        </div>
        <div class="form-group row">
            <label for="body">Comment</label>
            <textarea class="form-control" id="body" name="body" rows="4" required></textarea>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>
    <br>
    <br>
    <footer class="footer">
        <p>&copy; Anthony "Ace" Cera 2018</p>
    </footer>
</div>